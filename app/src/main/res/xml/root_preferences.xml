<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Aspetto">

        <ListPreference
            app:key="app_theme"
            app:title="Tema app"
            app:entries="@array/DarkMode_Modes"
            app:entryValues="@array/DarkMode_Values"/>

    </PreferenceCategory>

    <PreferenceCategory app:title="Sicurezza">

       <SwitchPreferenceCompat
            app:key="use_fingerprint"
            app:title="Accedi a mySobrero con l'impronta digitale"
            app:useSimpleSummaryProvider="true" />

        <Preference
            app:key="logout"
            app:title="Esegui il logout da mySobrero" />

    </PreferenceCategory>

    <PreferenceCategory>
    <Preference
        app:key="feedback"
        app:title="Invia feedback"
        app:summary="Invia un feedback agli sviluppatori riguardo problemi o suggerimenti" />

    <Preference
        app:key="info"
        app:title="Informazioni su mySobrero"/>
    </PreferenceCategory>

</PreferenceScreen>
