<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:animateLayoutChanges="true"
    android:background="@drawable/gradient2"
    android:orientation="vertical"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ad_voto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="9,5"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="30sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ad_materia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Elettronica ed Elettrotecnica"
                android:textColor="@color/colorOnBackground"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <Button
            android:id="@+id/ad_expandButton"
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:foreground="@drawable/ic_keyboard_arrow_down"
            android:foregroundTint="@android:color/black"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ad_expandView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/ad_comm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nessun commento al voto"
            android:textColor="@android:color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipologia voto: " />

            <TextView
                android:id="@+id/ad_tipo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PRATICO" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data: " />

            <TextView
                android:id="@+id/ad_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11/04/2002" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>