<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="40dp"
        android:visibility="visible">


    <androidx.cardview.widget.CardView
        android:id="@+id/eventiCard"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/layout2"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="15dp"
        app:cardCornerRadius="10dp"
        app:cardPreventCornerOverlap="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:background="@drawable/gradient5"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="11"
                    android:textColor="@android:color/black"
                    android:textSize="36sp" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="APR"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:text="Test evento - Non ancora disponibile :("
                android:textSize="18sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/comunicazioniCard"
        android:layout_marginTop="10dp"
        android:background="@color/altBackground"
        android:orientation="vertical"
        android:translationZ="0dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:text="Ultime dal Sobrero"
            android:textColor="@color/colorOnBackground"
            android:textSize="24sp"
            android:textStyle="bold" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp">

            <LinearLayout
                android:layout_width="1000dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    app:cardBackgroundColor="@color/background"
                    app:cardCornerRadius="10dp"
                    app:strokeColor="@color/gray"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <com.joooonho.SelectableRoundedImageView
                            android:id="@+id/art1_img"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_weight="1"
                            android:scaleType="centerCrop"
                            app:sriv_left_bottom_corner_radius="0dp"
                            app:sriv_left_top_corner_radius="10dp"
                            app:sriv_right_bottom_corner_radius="0dp"
                            app:sriv_right_top_corner_radius="10dp"
                            tools:srcCompat="@tools:sample/backgrounds/scenic[7]" />

                        <TextView
                            android:id="@+id/art1_titolo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="TESTO DELLA NOTIZIA LUNGO MA LUNGO DAVVERO"
                            android:textAllCaps="true"
                            android:textColor="@color/colorOnBackground"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/art1_btn"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="LEGGI"
                            android:textColor="@color/colorPrimary" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    app:cardBackgroundColor="@color/background"
                    app:cardCornerRadius="10dp"
                    app:strokeColor="@color/gray"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <com.joooonho.SelectableRoundedImageView
                            android:id="@+id/art2_img"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_weight="1"
                            android:scaleType="centerCrop"
                            app:sriv_left_bottom_corner_radius="0dp"
                            app:sriv_left_top_corner_radius="10dp"
                            app:sriv_right_bottom_corner_radius="0dp"
                            app:sriv_right_top_corner_radius="10dp"
                            tools:srcCompat="@tools:sample/backgrounds/scenic[18]" />

                        <TextView
                            android:id="@+id/art2_titolo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="TESTO DELLA NOTIZIA LUNGO MA LUNGO DAVVERO"
                            android:textAllCaps="true"
                            android:textColor="@color/colorOnBackground"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/art2_btn"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="LEGGI"
                            android:textColor="@color/colorPrimary" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    app:cardBackgroundColor="@color/background"
                    app:cardCornerRadius="10dp"
                    app:strokeColor="@color/gray"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <com.joooonho.SelectableRoundedImageView
                            android:id="@+id/art3_img"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_weight="1"
                            android:scaleType="centerCrop"
                            app:sriv_left_bottom_corner_radius="0dp"
                            app:sriv_left_top_corner_radius="10dp"
                            app:sriv_right_bottom_corner_radius="0dp"
                            app:sriv_right_top_corner_radius="10dp"
                            tools:srcCompat="@tools:sample/backgrounds/scenic[18]" />

                        <TextView
                            android:id="@+id/art3_titolo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="TESTO DELLA NOTIZIA LUNGO MA LUNGO DAVVERO"
                            android:textAllCaps="true"
                            android:textColor="@color/colorOnBackground"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/art3_btn"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="LEGGI"
                            android:textColor="@color/colorPrimary" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <TextView
        android:id="@+id/welcomeStud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_horizontal"
        android:padding="0dp"
        android:text="Ciao _NOME_"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/colorOnBackground"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/studentInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcomeStud"
        android:layout_marginLeft="15dp"
        android:layout_marginEnd="15dp"
        android:gravity="center_horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="Classe _XAE_ - _INDIRIZZO_"
        android:textAlignment="center"
        android:textColor="@color/colorOnBackground"
        android:textSize="14sp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/studentInfo"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/votiCard"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginRight="5dp"
            app:cardCornerRadius="10dp"
            app:cardPreventCornerOverlap="false"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/compitiCard"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient1"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/lastVoto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="0dp"
                        android:singleLine="true"
                        android:text="9"
                        android:textColor="@android:color/white"
                        android:textSize="69sp"
                        app:firstBaselineToTopHeight="0dp"
                        app:lastBaselineToBottomHeight="0dp"
                        app:lineHeight="0dp" />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/openVoti"
                            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            app:icon="@drawable/ic_arrow_forward_white"
                            app:iconGravity="textEnd"
                            app:iconPadding="0dp"
                            app:iconSize="25dp"
                            app:iconTint="@android:color/white" />

                        <View
                            android:id="@+id/view3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/lastVotoDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ultimo voto preso di %materia%"
                    android:textColor="@android:color/white"
                    app:autoSizeTextType="uniform" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/compitiCard"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="5dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@+id/votiCard"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient2"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/compitiCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="0dp"
                        android:singleLine="true"
                        android:text="0"
                        android:textColor="@android:color/black"
                        android:textSize="69sp"
                        app:firstBaselineToTopHeight="0dp"
                        app:lastBaselineToBottomHeight="0dp"
                        app:lineHeight="0dp" />

                    <View
                        android:id="@+id/view4"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/openCompiti"
                            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            app:icon="@drawable/ic_arrow_forward_white"
                            app:iconGravity="textEnd"
                            app:iconPadding="0dp"
                            app:iconSize="25dp"
                            app:iconTint="@android:color/black" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Compiti per i prossimi giorni"
                    android:textColor="@android:color/black" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/comunicazioniCard"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/layout1"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        app:cardCornerRadius="10dp"
        app:cardPreventCornerOverlap="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient3"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/testoComm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:text="Votate lista 2"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/openComunicazioni"
                    style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    app:icon="@drawable/ic_arrow_forward_white"
                    app:iconGravity="textEnd"
                    app:iconPadding="0dp"
                    app:iconSize="25dp"
                    app:iconTint="@android:color/white" />
            </LinearLayout>

            <TextView
                android:id="@+id/mittenteComm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ultima comunicazione da %MITTENTE%"
                android:textColor="@android:color/white"
                android:textSize="14sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    </RelativeLayout>
